@{
    ViewData["Title"] = "Asignar Amenaza";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h4 class="text-center mb-4">Asignar Amenaza a Especie</h4>

            @if (!string.IsNullOrEmpty((string)TempData["msg"])) {
                <div class="alert alert-danger mt-3" role="alert">
                    @TempData["msg"]
                </div>
            }

            <form asp-action="AsignarAmenaza" method="post">
                <div class="form-group">
                    <label for="EspecieId">Especie:</label>
                    <select name="EspecieId" class="form-control">
                        @foreach (var e in ViewBag.Especies) {
                            <option value="@e.EspecieId">@e.NombreVulgar (@e.NombreCientifico)</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label for="AmenazaId">Amenaza:</label>
                    <select name="AmenazaId" class="form-control">
                        @foreach (var a in ViewBag.Amenazas) {
                            <option value="@a.AmenazaId">@a.Nombre</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <input type="submit" value="Asignar" class="btn btn-primary" />
                </div>
            </form>

            
        </div>
    </div>
</div>
