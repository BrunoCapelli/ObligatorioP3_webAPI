<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EcosistemasApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EcosistemasApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="especieDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color: transparent; border: none; color: #000; padding: 0.375rem 1.75rem; cursor: pointer; text-decoration: underline;">
                                    Especie
                                </button>
                                <div class="dropdown-menu" aria-labelledby="especieDropdown">
                                    <a class="dropdown-item" href="@Url.Action("Index", "Especie")">Ver Especies</a>
                                    <a class="dropdown-item" href="@Url.Action("AsignarAmenaza", "Especie")">Asignar Amenaza a Especie</a>
                                    <a class="dropdown-item" href="@Url.Action("AsignarEcosistema", "Especie")">Asignar Especie a Ecosistema</a>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="ecosistemaDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color: transparent; border: none; color: #000; padding: 0.375rem 1.75rem; cursor: pointer; text-decoration: underline;">
                                    Ecosistema
                                </button>
                                <div class="dropdown-menu" aria-labelledby="ecosistemaDropdown">
                                    <a class="dropdown-item" href="@Url.Action("Index", "EcosistemaMarino")">Ver Ecosistemas</a>
                                    <a class="dropdown-item" href="@Url.Action("AsignarAmenaza", "EcosistemaMarino")">Asignar Amenaza a Ecosistema</a>
                                </div>
                            </div>
                        </li>
                        @if (Context.Session.GetString("email") != null) {
                            @if (Context.Session.GetString("email").ToString().Substring(0, 69) == "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiJhZG1pbjEiLCJleHAiOjE3")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Usuario" asp-action="Register">Agregar usuario</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Logout">Log out</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - WebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
