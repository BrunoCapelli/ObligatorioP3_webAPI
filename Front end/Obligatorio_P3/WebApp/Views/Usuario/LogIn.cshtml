@model Domain.DTO.UsuarioDTO

@{
    ViewData["Title"] = "LogIn";
}
@if (TempData["msg"] != "") {
    <h3  class="d-flex align-items-center justify-content-center" style="color:red">@TempData["msg"]</h3>

}

<div class="d-flex align-items-center justify-content-center" style="margin-top: 5%;">
    <div style="padding:20px; background-color:#D3D3D3;border-radius:5px">
        
        <h1>Login</h1>

        <h4>Ingrese su usuario y contraseña</h4>
        <hr />
        <div class="row">
            <div>
                <form asp-action="LogIn">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      
                    <div class="form-group">
                        <label>Usuario</label>
                        <input asp-for="Alias" class="form-control" />
                        <span asp-validation-for="Alias" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Ingresar" class="btn btn-primary" />
                    </div>
                    <div>
                        <p style="color: tomato">@ViewBag.DatosErroneos</p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
